{
  "name": "hampom/olt",
  "description": "日本電気株式会社が運営していたパソコン通信サービス「PC-VAN」のチャットサービスを模したチャットサーバーです。",
  "license": "MIT",
  "authors": [
    {
      "name": "anazawa yasuhiro",
      "email": "hampom@gmail.com"
    }
  ],
  "require": {
    "ext-mbstring": "*",
    "php": "^8.2",
    "react/socket": "^1.15",
    "voryx/websocketmiddleware": "^2.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "3.*",
    "slevomat/coding-standard": "~8.0"
  },
  "autoload": {
    "psr-4": {
      "Olt\\": "src/"
    }
  },
  "scripts": {
    "cs": "./vendor/bin/phpcs",
    "cs-fix": "./vendor/bin/phpcbf src"
  },
  "scripts-descriptions": {
    "cs": "Check the coding style",
    "cs-fix": "Fix the coding style"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
